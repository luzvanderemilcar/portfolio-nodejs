<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('../partials/head'); %>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css" integrity="sha512-Evv84Mr4kqVGRNSgIGL/F/aIDqQb7xQ2vcrdIwxfjThSH8CSR7PBEakCr51Ck+w+/U6swU2Im1vVX0SVk9ABhg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.3/css/bootstrap.min.css" integrity="sha512-jnSuA4Ss2PkkikSOLtYs8BlYIeeIK1h99ty4YfvRPAlzr377vr3CXDb7sb7eEEBYjDtcYj+AjBH3FLv5uSJuXg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
  <link rel="stylesheet" href="/css/styles.css" />

</head>
<body >

<header>
  <%- include('../partials/header'); %>
</header>

<main>
  <section>
    <h1 class="ubuntu-regular"><%= locals.project?.category %></h1>
  </section>

  <section class="project-view padded"  "projectid"="<%= locals.project?.id %>" >
    <div class="intro">
        <h2><%= locals.project?.title %></h2>
        <img src="<%= locals.project?.imageUrl %>" alt="image of <%= locals.project?.title %>" />
    </div>
    <hr />
    <div class="info">
      <div class="project-summary">
        <h3>Summary</h3>
        <div><%= locals.project?.summary %></div>
      </div>
      <hr />
      <div class="project-description">
        <h3>Description</h3>
        <div class="description">
          <p><%= locals.project?.description %></p>
      </div>
      </div>     
      <% if ( locals.project?.contributors) { %>
      <div class="project-contributors">
        <h3>Contributors</h3>
          <% locals.project?.contributors?.forEach(contributor => { %>
            <div class="contributor-item text-center">
               <img class="contributor-image" src="<%= contributor.imageLink %>" alt="photo of <%= contributor.name %>"
               <p class="contributor-name ubuntu-light-italic"><%= contributor.name %></p>
               <p class="contributor-details"><%= contributor.details %></p>
               <a class="contributor-profile-link" href="<%= contributor.profileLink %>" >View</a>
            </div>
          <% }); %>
     </div>
     <% } %>
   </div>
   <div class="controls">
      <% if (project.codeLink) { %>
      <a class="btn btn-secondary btn-sm" href="<%= project.codeLink %>" >Code</a>
		 <%  }%>
      <a class="btn btn-outline-dark btn-sm" href="/projects" >Back</a>
   </div>
    </section>

</main>

<footer>
  <%- include('../partials/footer'); %>
</footer>
<script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/js/all.min.js" integrity="sha512-b+nQTCdtTBIRIbraqNEwsjB6UvL3UEMkXnhzd8awtCYh0Kcsjl9uEgwVFVbhoj3uu1DO1ZMacNvLoyJJiNfcvg==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js" integrity="sha512-v2CJ7UaYy4JwqLDIrZUI/4hqeoQieOmAZNXBeQyjo21dadnwR+8ZaIJVT8EE2iyI61OV8e6M8PP2/4hpQINQ/g==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.3/js/bootstrap.min.js" integrity="sha512-ykZ1QQr0Jy/4ZkvKuqWn4iF3lqPZyij9iRv6sGqLRdTPkY69YX6+7wvVGmsdBbiIfN/8OdsI7HABjvEok6ZopQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
</body>
</html>

