<!DOCTYPE html>
<html lang="fr">
<head>
  <%- include('../partials/head'); %>
  <link rel="stylesheet" href="/css/styles.css" />
</head>
<body>

<header>
  <%- include('../partials/header'); %>
</header>

<main>
  <section class="rounded-corner">
     <h1><%= locals.firstHeading %></h1>
     <div class="title description">
        <ul class="ul-description">
         <% locals.titles.forEach(title =>{ %>
           <li><%= title.name %></li>
         <% }); %>
        </ul>
     </div>
  </section>

  <section>
  <div>
    <h2>Education</h2>
    <% if (locals.education?.description) { %>
     <div class="description">
       <p><%= locals.education?.description %></p>
    </div>
    <% } %>
  </div>
</hr />
<% locals.education?.list?.forEach(educationItem => { %> 
  <div class="subsection">
  <h3><%= educationItem.heading  %></h3>
  <p><%= educationItem.schoolName %></p>
  <hr class="heading-base" />
  <% for (let key in educationItem ) { %>
      <% if (key != "schoolName" && key != "heading") { %>
         <p><em><%= key %></em> : <%= educationItem[key] %></p>
      <% } %>
 <% } %>
</div>

<% }); %>
  </section>

<% locals.sections?.forEach(section => { %>
<section id="<%= section.title %>" >
  <div class="header-div">
    <% if (section.icon) %> <div class="header-icon"><%= section.icon %></div>
    <div class="header-text">
      <h2 class="heading"><%= section.sectionHeading %></h2>
    </div>
  </div>
  <% if (section.description) { %>
    <div class="description">
      <p><%= section.description %></p>
    </div>
  <% } %>

  <% if (section.lists) { %>
    <% section.lists.forEach(list => { %>
      <div class="subsection">
        <h3><%= list.heading %></h3>
        <p><%= list.introductoryPhrase %></p>
        <hr class="heading-base" />
        <ul>
          <% list.items?.forEach((item, idx) => { %>
          <li itemid="<%= idx %>" ><%= item %></li>
          <% }); %>
        </ul>
      </div>
    <% }); %>
  <% } %>
</section>

<% }); %>
<section>

</section>

</main>

<footer>
  <%- include('../partials/footer'); %>
</footer>

</body>
</html>
